
@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>
        Admin Panel - Ahmet Bulut
    </title>
    <script src="https://kit.fontawesome.com/e850398c0f.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900|Roboto+Slab:400,700" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Round" rel="stylesheet">

    <link href="~/Content/material-dashboard.css" rel="stylesheet" />
    <link href="~/Content/nucleo-icons.css" rel="stylesheet" />
    <link href="~/Content/nucleo-svg.css" rel="stylesheet" />
</head>

<body class="g-sidenav-show  bg-gray-300 ">
    <aside class="sidenav navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-3 fixed-start ms-3 bg-danger " id="sidenav-main">
        <div class="sidenav-header">
            <a class="navbar-brand m-0" href="@Url.Action("Index", "Admin")" >
                <img src="" class="navbar-brand-img h-100" alt="">
                <span class="ms-1 font-weight-bold text-white">Admin Panel</span>
            </a>
        </div>
        <hr class="horizontal light mt-0 mb-2">
        <div class="collapse navbar-collapse  w-auto " id="sidenav-collapse-main">
            <ul class="navbar-nav">

                <li class="nav-item">
                    <a class="nav-link text-white " href="@Url.Action("fotoIndex", "Admin")">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fa-regular fa-images"></i>
                        </div>
                        <span class="nav-link-text ms-1">FotoGaleri</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-white " href="@Url.Action("yemekIndex", "Admin")">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fas fa-utensils"></i>
                        </div>
                        <span class="nav-link-text ms-1">Yemeklerimiz</span>
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link text-white " href="@Url.Action("Index", "Home")">
                        <div class="text-white text-center me-2 d-flex align-items-center justify-content-center">
                            <i class="fa-solid fa-house"></i>
                        </div>
                        <span class="nav-link-text ms-1">AnaSayfa</span>
                    </a>
                </li>


            </ul>
        </div>
    </aside>
    <main class="main-content position-relative  h-100 border-radius-lg ">

        <div class="container-fluid py-4">
            @RenderBody()
        </div>
        <div class="ps__rail-x" style="left: 0px; bottom: -342px;"><div class="ps__thumb-x" tabindex="0" style="left: 0px; width: 0px;"></div></div><div class="ps__rail-y" style="top: 342px; height: 937px; right: 0px;"><div class="ps__thumb-y" tabindex="0" style="top: 251px; height: 686px;"></div></div>
    </main>

    @RenderSection("scripts", false)


</body>

</html>




