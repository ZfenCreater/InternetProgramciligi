<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Tokat</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg  bg-dark navbar-dark">
        <div class="container-fluid">
            <a @Html.ActionLink("TOKAT", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="nav justify-content-end " id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a>@Html.ActionLink("AnaSayfa", "Index", "Home", new { area = "" }, new { @class = "nav-link " })</a>
                    </li>
                    <li class="nav-item">
                        <a>@Html.ActionLink("Tarihimiz", "Tarihimiz", "Home", new { area = "" }, new { @class = "nav-link" })</a>
                    </li>
                    <li class="nav-item">
                        <a>@Html.ActionLink("Yemeklerimiz", "Yemeklerimiz", "Home", new { area = "" }, new { @class = "nav-link" })</a>
                    </li>
                    <li class="nav-item">
                        <a>@Html.ActionLink("FotoGaleri", "Foto", "Home", new { area = "" }, new { @class = "nav-link" })</a>
                    </li>
                    <li class="nav-item">
                        <a>@Html.ActionLink("Hakkında", "Hakkında", "Home", new { area = "" }, new { @class = "nav-link" })</a>
                    </li>
                    <li class="nav-item">
                        <a>@Html.ActionLink("Admin", "login", "Admin", new { area = "" }, new { @class = "nav-link" })</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>




    <div class="container-fluid">
        @RenderBody()
    </div>

    <div class="container body-content">
        <div class="container">
            <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
                <p class="col-md-4 mb-0 text-muted">&copy; @DateTime.Now.Year - Ahmet BULUT</p>

                <ul class="nav col-md-4 justify-content-end">
                    <li><a>@Html.ActionLink("AnaSayfa", "Index", "Home", new { area = "" }, new { @class = "nav-link px-2 text-muted" })</a></li>
                    <li><a>@Html.ActionLink("Tarihimiz", "Tarihimiz", "Home", new { area = "" }, new { @class = "nav-link px-2 text-muted" })</a></li>
                    <li><a>@Html.ActionLink("Yemeklerimiz", "Yemeklerimiz", "Home", new { area = "" }, new { @class = "nav-link px-2 text-muted" })</a></li>
                    <li><a>@Html.ActionLink("FotoGaleri", "Foto", "Home", new { area = "" }, new { @class = "nav-link px-2 text-muted" })</a></li>
                </ul>
            </footer>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", false)

</body>
</html>



