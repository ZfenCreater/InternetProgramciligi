@using example.Models
@model List<yemekler>

<table class="table table-striped">
    <tr>
        <th>id</th>
        <th>adı</th>
        <th>çeşit</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.id</td>
            <td>@item.adi</td>
            <td>@item.yemekcesit.Ad</td>
            <td>
                <a href="@Url.Action("Delete", "Admin", new { id = item.id })" class="btn btn-danger btn-sm">Sil</a>
                <a href="@Url.Action("InsertOrUpdate", "Admin", new { id = item.id })" class="btn btn-info btn-sm">Güncelle</a>
            </td>
        </tr>
    }
</table>

